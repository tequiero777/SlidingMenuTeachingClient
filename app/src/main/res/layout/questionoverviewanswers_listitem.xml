<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
	<RelativeLayout 
        android:id="@+id/questionoverview_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:id="@+id/questionoverview_answertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/grey" />
        
        <LinearLayout
		    android:id="@+id/questionoverview_resources_content"
		    android:layout_below="@+id/questionoverview_answertext"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
	    
		</LinearLayout>
        
        <TextView 
            android:id="@+id/questionoverview_answertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionoverview_resources_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/grey" />
      </RelativeLayout>
</LinearLayout>
